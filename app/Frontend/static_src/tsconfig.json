{
  "compilerOptions": {
    "target": "ES2020",                          // Set the JavaScript version (ES6 is commonly used)
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",                       // Set module system, use ESNext for modern module resolution
    "moduleResolution": "node",               // Resolve modules like Node.js
    "rootDir": "./src",                       // The root directory of TypeScript files
    "strict": true,                            // Enable strict type checking options
    "esModuleInterop": true,                  // Enable interoperability between CommonJS and ESModules
    "skipLibCheck": true,                     // Skip type checking of declaration files (for performance)
    "forceConsistentCasingInFileNames": true  // Ensure consistent casing of file names
  },
  "include": [
    "src/**/*"  // Include all TypeScript files in the 'src' folder
  ],
  "exclude": [
    "node_modules"  // Exclude node_modules folder
  ]
}

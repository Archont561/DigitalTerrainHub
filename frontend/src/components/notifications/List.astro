---
import { Notifications } from "@components";

interface Props extends Astro.ComponentProps {
    notifications: DjangoAPI.Notification[];
}

const {
    notifications = [] as DjangoAPI.Notification[],
} = Astro.props as Props;

if (!notifications.length) {
    for (let i=0; i < 10; i++) {
        notifications.push((await import("@assets/dummy/notification.json")).default);
    }
}
---

{notifications.map(notification => <Notifications.Partial notification={notification}>)}
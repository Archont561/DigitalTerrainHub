---

export interface Props extends Astro.HTMLComponentProps<"div"> {
}

const {
    ...props
} = Astro.props;

const notificationChannelURL = "/events/notifications"
---

<div 
    hx-ext="sse" 
    sse-connect={notificationChannelURL} 
    sse-swap="message"
    class:list=["toast", "toast-end"]
    {...props}
></div>

---
import Layouts from "@layouts";

const { app_name: appName } = Astro.props;

const urls = {
	account: {
		home: "/",
	},
	credentials: {
		login: "/credentials/login",
		register: "/credentials/register",
		logout: "credentials/logout",
	},
};
---

<Layouts.Base title="Home">
	<div class="grid grid-flow-rows h-screen w-screen grid-cols-3 gap-4 bg-base-100">
		<a class="btn btn-ghost size-full border-4 border-neutral-300" href={urls.account.home}>Profile</a>
		<a class="btn btn-ghost size-full border-4 border-neutral-300" href={urls.credentials.login}>Login</a>
		<a class="btn btn-ghost size-full border-4 border-neutral-300" href={urls.credentials.register}>Register</a>
		<form method="POST" action={urls.credentials.logout}>
			<input type="submit" class="btn btn-ghost size-full border-4 border-neutral-300" value="Logout">
		</form>
		<div>{appName}</div>
	</div>
</Layouts.Base>

---
import Layouts from "../layouts";
import { Forms } from "../components";

const urls = {
    home: "/",
    login: "/credentials/login",
    register: "/credentials/register",
};
---

<Layouts.Base title="Register">
    <div class="grid place-items-center h-screen bg-base-200">
        <section class="container sm:max-w-md flex flex-col gap-5">
            <a href={urls.home}
                class="flex flex-col items-center text-3xl font-semibold text-base-content"
                tabindex="-1">
                <h1>Digital Terrain Hub</h1>  
            </a>
            <div class="card bg-base-100 shadow-xl p-5 rounded-xl space-y-3">            
                <h1 class="card-title text-2xl text-base-content justify-center">
                    Register
                </h1>
                <div class="card-body p-0">
                    <Forms.Register registerURL={urls.register} fields=[] />
                    <p class="text-sm text-base-content/70 text-center">
                        Already have an account? 
                        <a href={urls.login} class="text-primary hover:underline">
                            Login here
                        </a>
                    </p>
                </div>
            </div>
        </section>
    </div>
</Layouts.Base>
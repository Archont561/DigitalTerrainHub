---
import { DjangoURLs } from "@assets";
import { Icon } from "astro-icon/components";
import Layouts from "@layouts";
import { Forms } from "@components";
---

<Layouts.Base title="Login">
    <div class="grid place-items-center h-screen bg-base-200">
        <section class="container p-8 xs:p-4 sm:max-w-md text-base-content">
            <a href={DjangoURLs.home()}
                class="flex flex-col items-center mb-6 text-4xl font-semibold"
                tabindex="-1">
                <h1>Digital Terrain Hub</h1>  
            </a>
            <div class="card bg-base-100 shadow-xl">
                <div class="card-body">
                    <h1 class="card-title text-2xl justify-center">
                        Log in
                    </h1>
                    <Forms.Login loginURL={DjangoURLs.api.user.auth.login()} />
                    <div class="divider my-4">Donâ€™t have an account?</div>
                    <a href={DjangoURLs.register()} class="btn btn-outline btn-block">
                        Register
                    </a>
                    <div class="grid grid-cols-1 xs:grid-cols-2 mt-6 gap-2 justify-center">
                        <a href={DjangoURLs.api.user.auth.resetPassword()} class="btn btn-ghost flex gap-1 basis-1/2">
                            <Icon name="mingcute:lock-line" />
                            <span>Forgot Password</span>
                        </a>
                        <a href={DjangoURLs.help()} class="btn btn-ghost flex gap-1 basis-1/2">
                            <Icon name="fa-solid:hands-helping" />
                            <span>Help</span>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</Layouts.Base>
---
const {
    type = "backdrop",
    id,
    ...props
} = Astro.props;

const isBackdrop = type === "backdrop";
const isButton = type === "button";
---

<dialog class="modal isolate" id={id}>
    <div class="modal-box" {...props}>
        <slot />
        {isButton && <form method="dialog">
            <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">
                <slot name="trigger"/>
            </button>
        </form>}
    </div>
    {isBackdrop && <form method="dialog" class="modal-backdrop -z-10"><input type="submit"></form>}
</dialog>
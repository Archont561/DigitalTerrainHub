---
import Popover from "./Popover.astro";

type DropdownProps = Parameters<typeof Popover>[0] & Astro.HTMLComponentProps<"div">;

export interface Props extends DropdownProps {};
---

<Popover 
    x-data="{ open: false }" 
    x-bind:class="{ dropdown-open: open }"
    x-bind:click.away="open=false">
    <slot slot="popover-content" name="dropdown-content" />
    <slot slot="popover-trigger" name="dropdown-trigger" />
</Popover>
---
import type { ComponentProps } from "astro/types";
import { mergeClass } from "@utils";
import Melt from "./Melt.astro";

export interface Props 
    extends Astro.ComponentProps,
        ComponentProps<typeof Melt> {
    clip?: "both" | "x" | "y";
}

const {
    clip = "both",
    class: className,
    style,
    ...props
} = Astro.props;

const layoutClass = mergeClass(className, "h-[100dvh] w-[100dvw]", {
    "overflow-clip": clip === "both",
    "overflow-clip-x": clip === "x",
    "overflow-clip-y": clip === "y",
});

---

<Melt {...props} class={layoutClass}>
  <slot />
</Melt>